{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Stacked area chart of forest reserves by state in Malaysia over time.",
    "width": 800,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/Szeyuinn/HomeworkWeek9/refs/heads/main/data/forest_reserve_state_cleaned_stacked.csv"
    },
    "transform": [
        {
            "filter": "datum.date >= 2003 && datum.date <= 2021"
        },
        {
            "aggregate": [
                {
                    "op": "sum",
                    "field": "area",
                    "as": "total_area"
                }
            ],
            "groupby": ["date", "state"]
        }
    ],
    "mark": {
        "type": "area",
        "line": true,
        "point": true
    },
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal",
            "title": "Year",
            "axis": {
                "grid": false
            }
        },
        "y": {
            "field": "total_area",
            "type": "quantitative",
            "title": "Forest Reserve Area (Hectares)"
        },
        "color": {
            "field": "state",
            "type": "nominal",
            "title": "State",
            "scale": {
                "scheme": "category20b"
            }
        },
        "tooltip": [
            {"field": "state", "type": "nominal", "title": "State"},
            {"field": "date", "type": "temporal", "title": "Year"},
            {"field": "total_area", "type": "quantitative", "title": "Forest Area (Hectares)"}
        ]
    },
    "selection": {
        "state_filter": {
            "type": "multi",
            "fields": ["state"],
            "bind": {
                "input": "select",
                "options": ["All", "Selangor", "Sabah", "Sarawak", "Johor", "Pahang"]
            }
        }
    },
    "transform": [
        {
            "filter": "datum.state == state_filter || state_filter == 'All'"
        }
    ]
}
